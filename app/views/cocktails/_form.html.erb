<%= simple_form_for [@cocktail] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.submit "Add cocktail", class: "btn btn-primary" %>
  </div>
<% end %>
