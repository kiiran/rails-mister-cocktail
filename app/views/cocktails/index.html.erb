<h1>Cocktails</h1>
<table>
  <thead>
    <th>Name</th>
    <th>Ingredients</th>
    <th>Dose</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @cocktails.each do |c| %>
      <tr>
        <td>
          <img src="<%= cl_image_path c.photo, height: 120, width: 160, crop: :fill %>" alt="<%= c.name %>">
        </td>
        <td>
          <%= c.name %>
        </td>
        <td>
          <ul>
            <% c.doses.each do |d| %>
              <li><%= d.ingredient.name %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% c.doses.each do |d| %>
              <li><%= d.description %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <%= link_to "See cocktail", cocktail_path(id: c.id), class: "btn btn-primary" %>
        </td>
        <td>
          <%= link_to "Delete cocktail", cocktail_path(id: c.id), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
