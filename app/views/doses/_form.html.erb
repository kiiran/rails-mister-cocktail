<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :cocktail_id, as: :hidden, value: @cocktail.id %>
    <%= f.input :ingredient_id, collection: Ingredient.all.each { |i| i.name } %>
    <%= f.input :description, label: "How much?" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Add dose", class: "btn btn-primary" %>
  </div>
<% end %>
